<div class="main-chat">
  <div class="main-top">
    <div class="room-name">
      hogefuga
    </div>
    <div class="close-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
  <div class="main-middle">
    <div class="message">
      <div class="message-header">
        <div class="posted-by">
          Tom
        </div>
        <div class="posted-date">
          2020/3/31(Wed) 12:43:30
        </div>
      </div>
      <div class="message-body">
        おはよう
      </div>
    </div>
    <div class="message">
      <div class="message-header">
        <div class="posted-by">
          Tom
        </div>
        <div class="posted-date">
          2020/3/31(Wed) 12:43:30
        </div>
      </div>
      <div class="message-body">
        おはよう
      </div>
    </div>
  </div>
  <div class="main-bottom">
    <%= form_with model: [@room, @message], html: {class: "message-form"}, local: true do |f| %>
      <div class="input">
        <%= f.text_field :content, class: "input-text", placeholder: "type a message" %>
        <label class="form-image">
          <span class="image-file">画像</span>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
      </div>
      <%= f.submit '送信', class: 'submit-btn' %>
    <% end %>
  </div>
</div>